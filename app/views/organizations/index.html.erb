<p id="notice"><%= notice %></p>

<h1>Vereine und Organisationen</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Anschrift</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @organizations.each do |organization| %>
      <tr>
        <td><%= organization.name %></td>
        <td><%= organization.address %></td>
        <td><%= link_to 'Anzeigen', organization %></td>
        <td><%= link_to 'Bearbeiten', edit_organization_path(organization) %></td>
        <td><%= link_to 'Löschen', organization, method: :delete, data: { confirm: ''+organization.name+' wirklich löschen?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

