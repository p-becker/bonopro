<p id="notice"><%= notice %></p>

<h1>Projekte</h1>

<table>
  <thead>
    <tr>
      <th>Titel</th>
      <th>Status</th>
      <th>Beschreibung</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.title %></td>
        <td><%= task.status %></td>
        <td><%= task.description %></td>
        <td><%= link_to 'Anzeigen', task %></td>
        <td><%= link_to 'Bearbeiten', edit_task_path(task) %></td>
        <td><%= link_to 'Löschen', task, method: :delete, data: { confirm: 'Wirklich löschen?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Neues Projekt', new_task_path %>
