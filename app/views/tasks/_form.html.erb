<%= form_with(model: task, local: true) do |form| %>
  <% if task.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(task.errors.count, "error") %> prohibited this task from being saved:</h2>

      <ul>
      <% task.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :Verein %>
    <%= form.collection_select(:organization_id, Organization.all, :id, :name) %>
  </div>

  <div class="field">
    <%= form.label :Zusammenfassung %>
    <%= form.text_field :title, id: :task_title %>
  </div>

  <div class="field">
    <%= form.label :status %>
    <%= form.text_field :status, id: :task_status %>
  </div>

  <div class="field">
    <%= form.label :Info %>
    <%= form.text_area :description, id: :task_description %>
  </div>

  <div class="actions">
    <%= form.submit 'Speichern' %>
  </div>
<% end %>
